<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>MethodFilter</filter-name>
        <filter-class>org.vad1mchk.webprogr.lab03.util.MethodFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MethodFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <context-param>
        <param-name>javax.faces.FACELETS_LIBRARIES</param-name>
        <param-value>/WEB-INF/vad1mchk.taglib.xml</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>400</error-code>
        <location>/WEB-INF/error-pages/400.xhtml</location>
    </error-page>
    <error-page>
        <error-code>402</error-code>
        <location>/WEB-INF/error-pages/402.xhtml</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/error-pages/403.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/error-pages/404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/WEB-INF/error-pages/405.xhtml</location>
    </error-page>
    <error-page>
        <error-code>418</error-code>
        <location>/WEB-INF/error-pages/418.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/error-pages/500.xhtml</location>
    </error-page>
    <error-page>
        <error-code>503</error-code>
        <location>/WEB-INF/error-pages/503.xhtml</location>
    </error-page>
</web-app>